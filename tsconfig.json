{
	"compilerOptions": {
		"module": "nodenext",
		"target": "es2020",
		"lib": [
			"esnext"
			// "dom",
		],
		"jsx": "react", // React stuff
		"esModuleInterop": true,
		// "moduleResolution": "node",
		"sourceMap": true,
		"outDir": "bin",
		"baseUrl": ".",
		"paths": {
			"*": [
				"node_modules/*",
				"src/types/*"
			]
		},
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}
