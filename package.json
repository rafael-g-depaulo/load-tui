{
  "name": "load-tui",
  "version": "1.0.0",
  "description": "A simple TS CLI app to give a fun and simple user TUI for running many commands at once",
  "main": "index.js",
  "repository": "git@github.com:rafael-g-depaulo/load-tui.git",
  "author": "Rafael G. de Paulo <rafael.g.depaulo@gmail.com>",
  "license": "MIT",
  "type": "module",
  "devDependencies": {
    "@types/ink": "^2.0.3",
    "@types/ink-box": "^1.0.2",
    "@types/node": "^18.15.12",
    "@types/react": "^18.2.5",
    "concurrently": "^8.0.1",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.4"
  },
  "scripts": {
    "start": "./bin/index.js",
    "dev": "yarn nodemon -w src -e ts,tsx -x 'NODE_OPTIONS=\"--loader ts-node/esm\" node --no-warnings src/index.tsx'",
    "build": "tsc && chmod u+x ./bin/index.js && ln -fs $(pwd)/bin/index.js $HOME/commands/load-tui",
    "watch-start": "nodemon -w bin -x 'yarn start'",
    "watch-build": "nodemon -e ts,tsx -w src -x 'yarn build'",
    "clean": "rm -r ./bin"
  },
  "dependencies": {
    "ink-spinner": "^5.0.0",
    "ink-table": "^3.0.0",
    "react": "^18.2.0",
    "swr": "^2.1.5"
  }
}
